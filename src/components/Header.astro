---
// Header component with navigation
import { ThemeToggle } from "./ThemeToggle";
import { createSupabaseServerInstance } from "../db/supabase.client.ts";

// Get user session server-side
const supabase = createSupabaseServerInstance({
  cookies: Astro.cookies,
  headers: Astro.request.headers,
});

const {
  data: { user },
} = await supabase.auth.getUser();

const isAuthenticated = !!user;
---

<header class="border-b hidden md:block bg-background/60 backdrop-blur-xl shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 py-4">
    <nav class="flex items-center justify-between">
      <a
        href="/"
        class="text-xl font-bold text-foreground hover:text-primary transition-all cursor-pointer relative group inline-block"
      >
        <span class="relative z-10">Portfol.io</span>
        <span
          class="absolute bottom-0 left-0 w-full h-1 emerald-gradient rounded-full transform origin-left transition-transform group-hover:scale-x-100 scale-x-75"
        ></span>
      </a>
      <div class="flex items-center gap-4">
        {
          isAuthenticated ? (
            <>
              <a
                href="/projects"
                class="text-sm hover:text-primary transition-colors cursor-pointer font-medium drop-shadow-sm"
              >
                {" "}
                Projekty{" "}
              </a>
              <a
                href="/projects/new"
                class="text-sm hover:text-primary transition-colors cursor-pointer font-medium drop-shadow-sm"
              >
                {" "}
                Dodaj projekt{" "}
              </a>
              <div class="relative group">
                <button
                  type="button"
                  class="flex items-center gap-2 text-sm text-foreground/90 hover:text-primary transition-colors cursor-pointer font-medium drop-shadow-sm"
                  id="user-menu-trigger"
                >
                  <span>{user?.email}</span>
                  <svg
                    class="w-4 h-4 transition-transform group-hover:rotate-180"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </button>
                <div
                  class="absolute right-0 mt-2 w-48 bg-popover/95 border rounded-md shadow-2xl opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-[999]"
                  id="user-menu-dropdown"
                >
                  <div class="py-1">
                    <a
                      href="/profile"
                      class="block w-full text-left px-4 py-2 text-sm hover:bg-accent hover:text-accent-foreground transition-colors cursor-pointer"
                    >
                      Profil
                    </a>
                    <button
                      type="button"
                      id="logout-btn"
                      class="w-full text-left px-4 py-2 text-sm hover:bg-accent hover:text-accent-foreground transition-colors cursor-pointer"
                    >
                      Wyloguj
                    </button>
                  </div>
                </div>
              </div>
            </>
          ) : (
            <>
              <a
                href="/auth/login"
                class="text-sm hover:text-primary transition-colors cursor-pointer font-medium drop-shadow-sm"
              >
                {" "}
                Zaloguj{" "}
              </a>
              <a
                href="/auth/register"
                class="text-sm hover:text-primary transition-colors cursor-pointer font-medium drop-shadow-sm"
              >
                {" "}
                Zarejestruj{" "}
              </a>
            </>
          )
        }
        <ThemeToggle client:only="react" />
      </div>
    </nav>
  </div>
</header>

<script>
  import { initializeHeaderInteractions } from "../lib/header.utils";

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initializeHeaderInteractions);
  } else {
    initializeHeaderInteractions();
  }
</script>
